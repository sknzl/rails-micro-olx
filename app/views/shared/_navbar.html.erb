<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, :class => "navbar-wagon-brand navbar-wagon-link" do%>
  <h3>Mirco-OLX</h3>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

  <% if logged_in? %>
    <%= link_to "Home", root_path, :class => "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "New Article",  new_article_path(current_user), :class => "navbar-wagon-item navbar-wagon-link" %>
  <% else %>
    <%= link_to "Log-in", new_session_path, :class => "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Register", new_user_path, :class => "navbar-wagon-item navbar-wagon-link" %>
  <% end %>

  <% if logged_in? %>
    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <i class="far fa-user"
 class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown"> </i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Profile", edit_user_path(current_user) %></li>
          <li><%= link_to "Logout", session_path(current_user), method: :delete %></li>
        </ul>
      </div>
    </div>

  <%end%>
  </div>

  <% if logged_in? %>
  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Users", users_path %></li>
        <li><%= link_to "Profile", edit_user_path(current_user) %></li>
        <li><%= link_to "New Article",  new_article_path(current_user) %></li>
        <li><%= link_to "Logout", session_path(current_user), method: :delete %></li>
      </ul>
    </div>
  </div>
  <%else%>
    <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Log-in", new_session_path %></li>
        <li><%= link_to "Register", new_user_path%></li>
      </ul>
    </div>
  </div>
  <%end%>
</div>
