<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
    <%= f.text_area :title, placeholder: "title" %>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new article..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
