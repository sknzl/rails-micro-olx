<% @articles.each do |article| %>
<div class="card">
  <div class="card-header">
    <%= article.title %> - <%= article.price %> Euro
  </div>
  <div class="card-body">
    <p class="card-text"><%= article.content %></p>

    <% if logged_in? %>
    <%= mail_to article.user.email, "Email seller", :class => "btn btn-primary" %>
    <% else %>
    <%= link_to "Log-in to contact seller", new_session_path, :class => "btn btn-primary" %>
    <% end %>

  </div>
</div>
<%end%>
